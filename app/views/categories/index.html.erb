<h1 class ="text-center mt-4">Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>

<% @categories.each do |category| %>
<div class ="container mt-4">
  <div class ="row justify-content-md-center">
    <div class ="col-8">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        </div>
        <div class="card-footer text-body-secondary">
          Created about <%= time_ago_in_words(category.created_at)%> ago, Updated about <%= time_ago_in_words(category.updated_at)%> ago
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>